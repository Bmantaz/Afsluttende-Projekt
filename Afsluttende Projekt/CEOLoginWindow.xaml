<Window x:Class="Afsluttende_Projekt.CEOLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Afsluttende_Projekt"
        mc:Ignorable="d"
        Title="CEOLoginWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <!-- PLACE HOLDER SKIFT DENNE -->
        <ImageBrush ImageSource="Assets/Baggrund.jpg"/>
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Indtast adgangskode til CEO-sektionen:" Grid.Row="0" Margin="0,0,0,10"/>
        <PasswordBox x:Name="txtCEOCode" Grid.Row="1" Margin="0,0,0,10"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="60" Margin="5" Click="OK_Click"/>
            <Button Content="Annuller" Width="60" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>